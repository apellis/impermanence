<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ape.meditationretreattimer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="33" />

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <permission
        android:name="com.ape.meditationretreattimer.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ape.meditationretreattimer.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:name="com.ape.meditationretreattimer.MeditationRetreatTimerApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeditationRetreatTimer" >
        <activity
            android:name="com.ape.meditationretreattimer.SettingsActivity"
            android:exported="false"
            android:parentActivityName="com.ape.meditationretreattimer.HomeActivity" />
        <activity
            android:name="com.ape.meditationretreattimer.HomeActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ape.meditationretreattimer.EditTimerActivity"
            android:exported="false"
            android:parentActivityName="com.ape.meditationretreattimer.HomeActivity" />
        <activity
            android:name="com.ape.meditationretreattimer.PlayTimerActivity"
            android:exported="false"
            android:parentActivityName="com.ape.meditationretreattimer.HomeActivity" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.ape.meditationretreattimer.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>